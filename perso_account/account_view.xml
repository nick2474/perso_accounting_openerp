<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_perso_account_tree">
            <field name="name">perso.account.tree</field>
            <field name="model">perso.account</field>
            <field name="arch" type="xml">
                <tree string="Account">
                    <field name="id" />
                    <field name="name"/>
                    <field name="type"/>
                    <field name="amount" sum="Total" />
                    <field name="consolidated_amount" sum="Total" />
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_account_tree_tree">
            <field name="name">perso.account.tree.tree</field>
            <field name="model">perso.account</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="Chart of account" toolbar="1">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="type"/>
                    <field name="amount" sum="Total" />
                    <field name="consolidated_amount" sum="Total" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_perso_account_search">
            <field name="name">perso.account.search</field>
            <field name="model">perso.account</field>
            <field name="arch" type="xml">
               <search string="Account">
                    <field name="name" />
                    <field name="parent_id" />
                    <field name="type" />
                    <field name="description" />
                </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_perso_account_form">
            <field name="name">perso.account.form</field>
            <field name="model">perso.account</field>
            <field name="arch" type="xml">
               <form string="Account" version="7.0">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="type" />
                            <field name="parent_id" />
                            <field name="amount" />
                        </group>
                        <notebook>
                            <page string="Child Account">
                                <field name="child_ids" />
                            </page>
                            <page string="Cash Flows">
                                <field name="cash_flow_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="bank_id"/>
                                        <field name="amount" sum="Total" />
                                        <field name="value_date"  />
                                        <field name="transaction_date" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Description">
                                <field name="description" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    
    <record model="ir.actions.act_window" id="account_act_form">
            <field name="name">Account</field>
            <field name="res_model">perso.account</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_perso_account_tree" />
   </record>
   
   <record model="ir.actions.act_window" id="account_act_tree">
            <field name="name">Chart of Account</field>
            <field name="res_model">perso.account</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_account_tree_tree" />
   </record>
    
    
    <menuitem
            id="perso_account_top"
            name="Personnal Accounting"
            />
            
    <menuitem
            id="perso_account_root"
            parent="perso_account_top"
            name="Personnal Accounting"
            />
    <menuitem
            id="perso_account_account"
            parent="perso_account_root"
            name="Account"
            action="account_act_form"/>
            
    <menuitem
            id="perso_account_account_tree"
            parent="perso_account_root"
            name="Chart of Account"
            action="account_act_tree"/>
    
    
    </data>
</openerp>
