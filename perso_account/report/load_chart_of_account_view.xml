<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="load_chart_of_account">
        <field name="name">perso.account.load_chart_of_account.view
        </field>
        <field name="model">perso.account.load_chart_of_account</field>
        <field name="arch" type="xml">
            <form string="Load Chart of account" version="7.0">
                <group>
                    <field name="period_id" />
                    <field name="bank_ids" widget="many2many_tags" />

                </group>
                <footer>
                    <button name="open" string="Open" type="object" />
                    or
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="load_chart_of_account_action">
        <field name="name">Chart of Account</field>
        <field name="res_model">perso.account.load_chart_of_account</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="perso_account_account_tree" parent="perso_account_report"
        name="Chart of Account" action="load_chart_of_account_action" />
</odoo>
